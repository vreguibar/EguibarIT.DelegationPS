// Place your settings in this file to overwrite default and user settings.
{
  "powershell.scriptAnalysis.enable": true,
  "powershell.scriptAnalysis.settingsPath": ".vscode/ScriptAnalyzerSettings.psd1",
  "powershell.codeFormatting.autoCorrectAliases": true,
  "powershell.codeFormatting.useCorrectCasing": true,
  "powershell.codeFormatting.openBraceOnSameLine": true,
  "powershell.codeFormatting.newLineAfterOpenBrace": true,
  "powershell.codeFormatting.newLineAfterCloseBrace": false,
  "powershell.codeFormatting.whitespaceBeforeOpenBrace": true,
  "powershell.codeFormatting.whitespaceBeforeOpenParen": true,
  "powershell.codeFormatting.whitespaceAroundOperator": true,
  "powershell.codeFormatting.whitespaceAfterSeparator": true,
  "powershell.codeFormatting.ignoreOneLineBlock": false,
  "powershell.codeFormatting.alignPropertyValuePairs": true,
  "editor.autoIndent": "full",
  "editor.autoClosingBrackets": "always",
  "editor.bracketPairColorization.enabled": true,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.codeLens": true,
  "editor.detectIndentation": true,
  "editor.folding": true,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "file",
  "editor.formatOnType": true,
  "editor.guides.bracketPairs": true,
  "editor.guides.highlightActiveBracketPair": true,
  "editor.indentSize": "tabSize",
  "editor.insertSpaces": true,
  "editor.matchBrackets": "always",
  "editor.showDeprecated": true,
  "editor.tabCompletion": "on",
  "editor.tabSize": 4,
  "editor.unusualLineTerminators": "auto",
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 20000,
  "files.encoding": "utf8bom",
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/Thumbs.db": true,
    "node_modules": true,
    "markdownissues.txt": true
  },
  "files.hotExit": "onExit",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": false,
  "files.trimTrailingWhitespace": true,
  // Add a visual ruler for the typescript linting line length
  "editor.rulers": [
    120
  ],
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "logs/": true,
    "out/": true
  },
  // Lock the TypeScript SDK path to the version we use
  "typescript.tsdk": "./node_modules/typescript/lib",
  // Ignore the MD rule:
  "markdownlint.config": {
    "MD024": false // no-duplicate-header
  }
}
